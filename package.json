{
    "name": "vscode-scribble",
    "displayName": "VS Code Scratchpad",
    "description": "A scratchpad extension for VS Code with Settings Sync support",
    "version": "1.2.0",
    "publisher": "mfolarin",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "panel": [
                {
                    "id": "scratchpadContainer",
                    "title": "Scratchpad",
                    "icon": "resources/scratchpad.svg"
                }
            ]
        },
        "views": {
            "scratchpadContainer": [
                {
                    "id": "scratchpad",
                    "name": "Scratchpad",
                    "type": "webview"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.91.0",
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0"
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/folarinmartins/vscode-scratch-pad.git"
    },
    "bugs": {
        "url": "https://github.com/folarinmartins/vscode-scratch-pad/issues"
    },
    "homepage": "https://github.com/folarinmartins/vscode-scratch-pad#readme",
    "license": "MIT"
}
